
<EditForm Model="@Color" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Color Name: </label>
            <div>
                <input @bind="Color.Name" class="form-control" />
            </div>
        </div>

        @*Version two*@
        @*<div class="form-group">
            <label>Color Name: </label>
            <div>
            <InputText @bind-Value="@color.Name" class="form-control"></InputText>
            <ValidationMessage For="@(() => color.Name)"></ValidationMessage>
            </div>
            </div>*@
    </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success">@ButtonText</button>
    }
    <BackToList Target="colors" />
</EditForm>


@code
{
    [Parameter] public Color Color { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    [Parameter] public string ButtonText { get; set; }
    [Parameter] public bool Disabled { get; set; } = false;
}
