@page "/colors/"
@*@attribute [Authorize]*@

<HeadingComponent Text="Colors"></HeadingComponent>
<br />

<a href="/colors/create/" class="btn btn-secondary">
    <span class="oi oi-plus"></span>
    Create New Color
</a>
<br />
<br />


@if (_colors == null)
{
    <div class="alert-info">Loading Colors...</div>
}
else
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var color in _colors)
            {
                <tr>
                    <td>@color.Name</td>
                    <td>
                        <a href="/colors/view/@color.Id" class="btn btn-primary">
                            <span class="oi oi-book"></span>
                        </a>
                        <a href="/colors/edit/@color.Id" class="btn btn-warning">
                            <span class="oi oi-pencil"></span>
                        </a>
                        <button class="btn btn-danger" @onclick="@(() => Delete(color.Id))">
                            <span class="oi oi-delete"></span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


