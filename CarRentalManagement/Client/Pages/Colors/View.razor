@page "/colors/view/{id:int}"
@using CarRentalManagement.Client.Contracts

@inject IHttpRepository<Color> HttpRepository
@inject NavigationManager _navigationManager

<HeadingComponent Text="Color"></HeadingComponent>
<br />


<FormComponent Color="_color" Disabled="true"></FormComponent>


@code {

    [Parameter] public int Id { get; set; }
    Color _color = new();

    protected override async Task OnParametersSetAsync()
    {
        _color = await HttpRepository.Get(Endpoints.ColorsEndpoint, Id);
    }
}