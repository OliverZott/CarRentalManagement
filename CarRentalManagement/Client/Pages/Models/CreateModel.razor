@page "/models/create/"

@inject HttpClient _httpClient
@inject NavigationManager _navigationManager


<h3 class="card-title">Create New Model</h3>
<hr />
<br />

<FormComponent ButtonText="Create Model" Model="_model" OnValidSubmit="@CreateNewModel"></FormComponent>


@code {

    private readonly Model _model = new Model();

    private async Task CreateNewModel()
    {
        await _httpClient.PostAsJsonAsync(Endpoints.ModelsEndpoint, _model);
        _navigationManager.NavigateTo("/models");
    }

}