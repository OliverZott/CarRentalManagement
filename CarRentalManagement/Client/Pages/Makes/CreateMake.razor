@page "/makes/create"

@inject HttpClient _httpClient
@inject NavigationManager _navigationManager



<h3 class="card-title">Create New Make</h3>
<hr />
<br />

<EditForm Model="@make" OnValidSubmit="CreateNewMake">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>
    
    <div class="form-group">
        <label>Make Name: </label>
        <div>
            <InputText @bind-Value="@make.Name" class="form-control"></InputText>
            <ValidationMessage For="@(() => make.Name)"></ValidationMessage>
        </div>
    </div>
    
    <button type="submit" class="btn btn-success btn-block" >Create Make</button>

</EditForm>



@code {

    private Make make = new Make();

    protected async override Task OnInitializedAsync()
    {
    }

    private async Task CreateNewMake()
    {
        await _httpClient.PostAsJsonAsync(Endpoints.MakesEndpoint, make);
        _navigationManager.NavigateTo("/makes");
    }

}